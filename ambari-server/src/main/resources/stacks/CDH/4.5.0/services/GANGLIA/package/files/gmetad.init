# Remember to keep this in-sync with the definition of 
# GANGLIA_RUNTIME_COMPONENTS_UNPACK_DIR in monrpmInstaller.sh.
CDH_GANGLIA_RUNTIME_COMPONENTS_DIR=/usr/libexec/cdh/ganglia
CDH_GANLIA_GMETAD_STARTER=${CDH_GANGLIA_RUNTIME_COMPONENTS_DIR}/startGmetad.sh
CDH_GANLIA_GMETAD_STOPPER=${CDH_GANGLIA_RUNTIME_COMPONENTS_DIR}/stopGmetad.sh
CDH_GANLIA_GMETAD_CHECKER=${CDH_GANGLIA_RUNTIME_COMPONENTS_DIR}/checkGmetad.sh

RETVAL=0

case "$1" in
   start)
      echo "============================="
      echo "Starting cdh-gmetad..."
      echo "============================="
      [ -f ${CDH_GANLIA_GMETAD_STARTER} ] || exit 1
      eval "${CDH_GANLIA_GMETAD_STARTER}"
      RETVAL=$?
      echo
      [ $RETVAL -eq 0 ] && touch /var/lock/subsys/cdh-gmetad
      ;;

  stop)
      echo "=================================="
      echo "Shutting down cdh-gmetad..."
      echo "=================================="
      [ -f ${CDH_GANLIA_GMETAD_STOPPER} ] || exit 1
      eval "${CDH_GANLIA_GMETAD_STOPPER}"
      RETVAL=$?
      echo
      [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/cdh-gmetad
      ;;

  restart|reload)
   	$0 stop
   	$0 start
   	RETVAL=$?
	;;
  status)
      echo "======================================="
      echo "Checking status of cdh-gmetad..."
      echo "======================================="
      [ -f ${CDH_GANLIA_GMETAD_CHECKER} ] || exit 1
      eval "${CDH_GANLIA_GMETAD_CHECKER}"
      RETVAL=$?
      ;;
  *)
	echo "Usage: $0 {start|stop|restart|status}"
	exit 1
esac

exit $RETVAL

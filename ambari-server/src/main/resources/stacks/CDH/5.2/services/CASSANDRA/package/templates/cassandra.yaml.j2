# Cassandra Cluster Name
cluster_name: {{cluster_name}}

# Initial Token for partitioning
initial_token: {{initial_token}}

# Seed Provider Class
seed_provider:
    - class_name: {{seed_provider}}
      parameters:
        - seeds: {{seeds}}

listen_address: {{listen_address}}

rpc_address: {{rpc_address}}

thrift_framed_transport_size_in_mb: {{thrift_framed_transport_size_in_mb}}
thrift_max_message_length_in_mb: {{thrift_max_message_length_in_mb}}

endpoint_snitch: {{endpoint_snitch}}

data_file_directories:
{% for dir in data_file_directories %}
    - {{dir}}
{% endfor %}

commitlog_directory: {{commitlog_directory}}
saved_caches_directory: {{saved_caches_directory}}

commitlog_sync: {{commitlog_sync}}
commitlog_sync_batch_window_in_ms: {{commitlog_sync_batch_window_in_ms}}

partitioner: {{partitioner}}

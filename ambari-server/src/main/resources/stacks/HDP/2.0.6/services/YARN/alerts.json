        "enabled": true,
        "source": {
          "type": "AGGREGATE",
          "alert_name": "yarn_nodemanager_webui",
          "reporting": {
            "ok": {
              "text": "affected: [{1}], total: [{0}]"
            },
            "warning": {
              "text": "affected: [{1}], total: [{0}]",
              "value": 0.1
            },
            "critical": {
              "text": "affected: [{1}], total: [{0}]",
              "value": 0.3
            }
          }
        }
      }
